<!-- Set the page title to "Ranking" -->
<% content_for :title do %>Ranking<% end %>

<div id="ranking_header" class="page-header">
    <h3><i class="fa fa-trophy"></i> <%= t('Ranking das Rodovias Federais') %> <br><br>
        <small>
            <ul class="nav navbar-nav navbar-right">
                <div class="dropdown" id="rate_types">

                    <%= t('Você está visualizando o ranking na taxa de') %>
                    <label class="dropdown-toggle" data-toggle="dropdown">
                        <font color="#EEC900"><%= t('Acidentes/Km') %></font>
                        <span class="fa fa-chevron-down"></span>
                    </label>

                    <ul class="dropdown-menu" role="menu" >
                        <li role="presentation">
                            <%= link_to 'Porcentagem em relação ao total', accidents_percentage_ranking_path  %>
                        </li>
                    </ul>

                </div>
            </ul><br>
        </small>
    </h3>
</div>

<br>

<div align="center">
    <div id="ranking_panel" class="panel panel-warning">

        <div class="panel panel-heading">
            <h5 class="panel-title" align="center"><%= t('Ranking Completo') %></h5>
        </div>

      <div id="ranking" class="content">
          <div class="panel-body">
              <table class="table table-hover" >
                  <thread>
                      <tr>
                      <th class="text-center"><%= t('Posição') %></th>
                      <th class="text-center"><%= t('BR') %></th>
                      <th class="text-center"><%= t('Acidentes/Km') %></th>
                      </tr>
                  </thread>
                  <tbody>
                      <% @HIGHWAYS.each do |highway| %>
                          <% if highway.accidentsRate != 0.0 && highway.accidentsRate != nil %>
                              <tr></tr>
                              <td><%= highway.rankingPosition %>º </td>
                              <td><%= highway.idBr %></td>
                              <td><%= format("%.4f",highway.accidentsRate) %></td>
                          <% end %>
                      <% end %>
                  </tbody>
              </table>
          </div>
      </div>

    </div>
</div>
